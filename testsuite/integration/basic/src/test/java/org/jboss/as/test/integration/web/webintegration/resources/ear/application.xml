<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE application PUBLIC "-//Sun Microsystems, Inc.//DTD J2EE Application 1.3//EN" "http://java.sun.com/dtd/application_1_3.dtd">
<application>
    <display-name>JBossTest Web Container Testsuite</display-name>
    <module>
        <!-- The testsuite war -->
        <web>
            <web-uri>jbosstest-web.war</web-uri>
            <context-root>/jbosstest</context-root>
        </web>
    </module>
    <!-- Another war to test context-root matching -->
    <module>
        <web>
            <web-uri>notjbosstest-web.war</web-uri>
            <context-root>/jbosstest-not</context-root>
        </web>
    </module>
    <module>
        <ejb>jbosstest-web-ejbs.jar</ejb>
    </module>
    <module>
        <ejb>cts.jar</ejb>
    </module>
    <!-- An ejb module in a subdirectory to check whether the resolving of 'ejb-link' elements of the form "subdir/some.jar#MyBean" works correctly. -->
    <!-- AS-2067 module>
        <ejb>subdir/websubdir.relative.jar</ejb>
        </module -->
</application>